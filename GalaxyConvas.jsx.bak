import EnhancedStars from './EnhancedStars';
import AccretionDisk from './AccretionDisk';
import BlackHoleDistortion from './BlackHoleDistortion';
import { Canvas, useFrame } from '@react-three/fiber';
import { OrbitControls } from '@react-three/drei';
import { useRef } from 'react';
import * as THREE from 'three';

// Black Hole mesh
function BlackHole() {
  const mesh = useRef();
  useFrame(() => {
    if (mesh.current) {
      mesh.current.rotation.y += 0.01;
    }
  });
  return (
    <mesh ref={mesh}>
      <torusGeometry args={[1, 0.4, 16, 100]} />
      <meshStandardMaterial color="black" emissive="purple" emissiveIntensity={1} />
    </mesh>
  );
}

// Main Galaxy Canvas
function GalaxyCanvas() {
  return (
    <Canvas camera={{ position: [0, 0, 5], fov: 75 }} style={{ height: '100vh', width: '100vw' }}>
      <ambientLight intensity={0.2} />
      <pointLight position={[10, 10, 10]} />
      <EnhancedStars />
      {/* <AccretionDisk /> */}
      {/* <BlackHoleDistortion /> */}
      <BlackHole />
      <OrbitControls enableZoom={true} zoomSpeed={0.8} />
    </Canvas>
  );
}

export default GalaxyCanvas;